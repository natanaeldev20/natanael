---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-medium leading-none text-gray-800 dark:text-gray-200"
  >{date}</time
>
<h3 class="text-xl font-semibold text-orange-400 mt-2">
  {title}
</h3>
<p
  class="mb-4 text-base font-normal text-gray-700 text-pretty dark:text-gray-300"
>
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center text-orange-500 text-lg font-medium py-2 dark:text-orange-200 dark:hover:text-orange-300 hover:text-orange-700"
    >
      Saber m√°s{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
