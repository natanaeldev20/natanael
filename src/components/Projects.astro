---
import NextIcon from "../components/icons/Nextjs.astro";
import TailwindIcon from "../components/icons/Tailwind.astro";
import ReactIcon from "./icons/React.astro";
import ProjectCard from "./ProjectCard.astro";
import BunIcon from "./icons/Bun.astro";
import PrismaIcon from "./icons/Prisma.astro";
import PostgreSQL from "./icons/PostgreSQL.astro";
import AstroIcon from "./icons/Astro.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React.js",
    class: "bg-blue-900 text-white",
    icon: ReactIcon,
  },
  BUN: {
    name: "Bun",
    class: "bg-pink-500 text-white",
    icon: BunIcon,
  },
  PRISMA: {
    name: "Prisma",
    class: "bg-green-800 text-white",
    icon: PrismaIcon,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-cyan-800 text-white",
    icon: PostgreSQL,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: AstroIcon,
  },
};

const PROJECTS = [
  {
    title:
      "InkaEdu360 - Panel de Gestión de Contenido de la Institución Educativa N° 8900",
    description:
      "Panel de gestión de contenido para la administración centralizada y eficiente de noticias, eventos, usuarios y preinscripciones.",
    link: "https://cpanel89007.vercel.app",
    github: "https://github.com/natanaeldev20/cpanel89007",
    image: "/projects/project1.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TAILWIND,
      TAGS.REACT,
      TAGS.BUN,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
    ],
  },
  {
    title: "Sitio Web de la Institución Educativa N° 89007",
    description:
      "Sitio web institucional desarrollado con Astro y React. Diseño moderno y responsivo con Tailwind CSS. SEO optimizado mediante sitemap. Contenido validado directamente con la institución.",
    link: "https://institucioneducativa89007-4fzq.vercel.app/",
    github: "https://github.com/natanaeldev20/institucioneducativa89007",
    image: "/projects/sitiowebie89007.webp",
    tags: [TAGS.ASTRO, TAGS.REACT, TAGS.BUN],
  },
];
---

{
  PROJECTS.map(({ title, description, image, tags, link, github }) => (
    <ProjectCard
      title={title}
      description={description}
      image={image}
      tags={tags}
      link={link}
      github={github}
    />
  ))
}
